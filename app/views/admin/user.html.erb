<div class="container main-content">
	<%= render partial:"admin/nav"%>
	
	<br>
	<br>
	<table class="table table-striped table-bordered">
		<thead>
			<tr>
				<th>#</th>
				<th>用户</th>
				<th>操作</th>
			</tr>
		</thead>
		<tbody>
			<% @user.each do |user|%>
			<tr>
				<th><%= user.name %></th>
				<td><%= user.pwd %></td>
				<td style="width:130px;">
					<%= link_to "编辑", edit_user_path(user), class:"btn btn-warning" %>
					<%= link_to "删除", user_path(user), method: :delete, data: {confirm: "Are you sure?"}, class:"btn btn-danger" %>
				</td>
			</tr>
			<% end %>
		</tbody>
	</table>
	<%= link_to "新增用户", new_logup_path, class:"btn btn-primary" %>
</div>
